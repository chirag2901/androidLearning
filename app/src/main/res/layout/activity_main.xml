<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
           xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F6F6F6">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/relative_1"
    android:background="@drawable/androidlogin"
    >
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/royalnew"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_uplabs"
            android:text="UpLabs"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="120dp"
            android:textStyle="bold"/>

</RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relative_2"
    android:layout_marginHorizontal="20dp"

    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp"
    android:layout_centerInParent="true"
    android:padding="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_email"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:padding="20dp"
            android:background="#fff"
          />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_password"
            android:background="#fff"
            android:layout_below="@+id/edt_email"
            android:hint="Password"
            android:layout_marginTop="20dp"
            android:padding="20dp"
                android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textPassword"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_grp"
            android:layout_below="@+id/edt_password"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="male"
                    android:buttonTint="#831515"
                    android:textColor="#831515"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="female"
                    android:buttonTint="#831515"
                    android:textColor="#831515"
                    />


        </RadioGroup>
</RelativeLayout>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chb"
            android:layout_below="@+id/relative_2"
            android:text="Remember Me!"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:buttonTint="#2196F3"


            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_fp"
    android:text="FORGOT PASSWORD?"
    android:layout_below="@id/relative_2"
    android:layout_marginTop="20dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="#2196F3"

    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_fp"
    android:layout_marginTop="40dp"
    android:orientation="horizontal"
    android:layout_marginHorizontal="20dp"
    >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"

            android:paddingVertical="10dp"
            android:text="LOGIN"
            android:layout_marginRight="20dp"

            android:textColor="#fff"


            />
        <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_reg"
    android:layout_width="0dp"
            android:layout_weight="1"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_bg"
    android:paddingHorizontal="60dp"
    android:paddingVertical="10dp"
    android:text="Reg"
    android:textColor="#fff"


    />
</LinearLayout>

</RelativeLayout>

