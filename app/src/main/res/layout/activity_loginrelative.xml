<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginrelative"
    android:background="#fff"
    android:padding="16dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_welcome"
      android:text="Welcome"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="#000"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_account"
      android:layout_below="@+id/tv_welcome"
      android:text="SignUp to your Account"
      android:textSize="18sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/inner_signup"
      android:paddingHorizontal="30dp"
      android:id="@+id/relative_1"
      android:paddingVertical="20dp"
      android:layout_centerInParent="true"
      android:layout_marginHorizontal="20dp"

    >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_signup"
      android:text="SignUp"
        android:paddingHorizontal="20dp"
      android:paddingVertical="15dp"
      android:textSize="30sp"
      android:textStyle="bold"
      android:textColor="#fff"
      />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:id="@+id/tv_fullname"
        android:layout_below="@id/tv_signup"
        android:hint="FullName"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_bg"
        android:padding="16dp"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email"
        android:layout_below="@id/tv_fullname"
        android:background="@drawable/edt_bg"
        android:padding="16dp"
        android:hint="Email"
        android:imeOptions="actionNext"
        android:textColorHint="#fff"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"

/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_password"
        android:layout_below="@id/tv_email"
        android:padding="16dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:singleLine="true"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:textColorHint="#fff"
        android:imeOptions="actionDone"
        android:drawableLeft="@drawable/ic_ock"
        android:drawablePadding="10dp"
        android:background="@drawable/edt_bg"
/>

    <android.widget.Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/btn_loginrelative"
        android:text="SIGNUP" />
  </RelativeLayout>

  <RelativeLayout
      android:id="@id/relative_2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/relative_1"
      android:layout_marginTop="30dp"
      android:gravity="center">

    <TextView
        android:id="@+id/tv_ac_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Already Have An Account?"
        android:textColor="#000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_ac_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@id/tv_ac_1"
        android:text="SignUp"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        android:textStyle="bold" />
  </RelativeLayout>

</RelativeLayout>